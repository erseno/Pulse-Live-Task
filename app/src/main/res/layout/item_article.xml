<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardElevation="4dp"
    app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_articleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Hewitt's final Australian Open" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/text_articleSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:maxLines="5"
            android:ellipsize="end"
            tools:text="Lleyton Hewitt begins his final major tournament after Rafael Nadal loses to Fernando Verdasco and Simona Halep crashes out." />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/text_articleDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            tools:text="18/04/2013 11:48" />
    </LinearLayout>

</android.support.v7.widget.CardView>
